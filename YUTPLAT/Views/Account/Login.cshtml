@using YUTPLAT.Models
@model LoginViewModel

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div id="LoginArea" class="row">
    <div class="col-xs-12 col-sm-offset-3 col-sm-6 col-md-6 col-lg-offset-4 col-lg-4">
        <div class="panel panel-default bs-component">

            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                <div class="panel-body">
                    @Html.AntiForgeryToken()
                    <h3>¡Bienvenido a Y U T P L A T!</h3>
                    <h4>Complete sus datos para ingresar al sistema</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row form-group">
                        <div class="col-lg-12">
                            @Html.LabelFor(m => m.User)
                            <span class="text-danger">*</span>
                            @Html.TextBoxFor(m => m.User, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.User, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            @Html.LabelFor(m => m.Password)
                            <span class="text-danger">*</span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">                            
                            <h6>
                                <small>
                                    <span class="text-danger">* campos obligatorios</span>
                                </small>
                            </h6>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">                            
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                    <div class="panel-footer text-center">
                        <button type="submit" class="btn btn-default">
                            <i class="fa fa-sign-in"></i>
                            Iniciar sesión
                        </button>
                    </div>
                    
                    
                </div>
            }
        </div>
    </div>
</div>
