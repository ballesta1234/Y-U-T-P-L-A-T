@using YUTPLAT.ViewModel
@model LoginViewModel

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="login login-page" data-color="blue">

    <div class="col-xs-offset-0 col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-4 col-md-4">
        <div class="sombra panel bs-component background-login">

            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                <div class="panel-body">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <h3>¡Bienvenido a Y U T P L A T!</h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <h5>Complete sus datos para ingresar al sistema</h5>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            @Html.LabelFor(m => m.User, new { @class = "label-login" })
                            <span class="text-danger">*</span>
                            @Html.TextBoxFor(m => m.User, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.User, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            @Html.LabelFor(m => m.Password, new { @class = "label-login" })
                            <span class="text-danger">*</span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <h6>
                                <small>
                                    <span class="text-danger">* campos obligatorios</span>
                                </small>
                            </h6>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe, new { @class = "label-login" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <div class="panel-footer text-center">

                                <button type="submit" class="btn btn-warning btn-fill ">
                                    <i class="fa fa-sign-in"></i>
                                    Iniciar sesión
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

