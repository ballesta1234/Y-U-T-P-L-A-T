@using YUTPLAT.ViewModel
@model BuscarAreaViewModel

<div class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Buscar</h4>
                    </div>
                    <div class="content">
                        @using (Html.BeginForm("Buscar", "Area", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                        {
                            <div class="row">
                                <div class="col-lg-4">
                                    @Html.LabelFor(m => m.Busqueda.Nombre)
                                    @Html.TextBoxFor(m => m.Busqueda.Nombre, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <button type="submit" class="btn btn-info btn-fill pull-left">Buscar</button>
                                </div>
                            </div>
                        }
                        @if (Model != null && Model.Resultados != null && Model.Resultados.Count > 0)
                        {
                            <br />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="header">
                                            <h5 class="title">Resultados de la búsqueda</h5>
                                            <p class="category">@Model.Resultados.Count áreas encontradas</p>
                                        </div>
                                        <div class="content table-responsive table-full-width">
                                            <table class="table table-hover table-striped">
                                                <thead>
                                                    <th>@Html.LabelFor(m => m.Busqueda.Nombre)</th>  
                                                    <th>@Html.LabelFor(m => m.Busqueda.Descripcion)</th>  
                                                    <th>@Html.LabelFor(m => m.Busqueda.FechaCreacion)</th>  
                                                    <th>@Html.LabelFor(m => m.Busqueda.UltimoUsuarioModifico)</th>  
                                                    <th>@Html.LabelFor(m => m.Busqueda.FechaUltimaModificacion)</th>                      
                                                </thead>
                                                <tbody>
                                                    @foreach (AreaViewModel area in Model.Resultados)
                                                    {
                                                        <tr>
                                                            <td>@area.Nombre</td>
                                                            <td>@((area.Descripcion.Length > 65) ? area.Descripcion.Substring(0, 65) + "..." : area.Descripcion)</td>
                                                            <td>@area.FechaCreacion</td>
                                                            <td>@area.UltimoUsuarioModifico</td>
                                                            <td>@area.FechaUltimaModificacion</td>                                                                                                             
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>